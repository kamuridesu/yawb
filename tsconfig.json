{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "ES2022",
        "target": "ES2017",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*", "*.ts"],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "resolve": {
        "extensions": [".ts", ".js", ".d.ts"]
    }
}